{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "declaration": true,
      "declarationDir": "./dist/types",
      "esModuleInterop": true,
      "jsx": "react",
      "moduleResolution": "node",
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "outDir": "./dist/",
      "strictFunctionTypes": true,
      "target": "es2015",
  },
  "include": [
      "./src/**/*.tsx"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
